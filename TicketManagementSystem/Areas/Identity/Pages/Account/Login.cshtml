@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<meta charset="utf-8" />
<title>Suite - Roadmap</title>
<meta name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no" />
<link rel="apple-touch-icon" href="~/pages/ico/60.png">
<link rel="apple-touch-icon" sizes="76x76" href="~/pages/ico/76.png">
<link rel="apple-touch-icon" sizes="120x120" href="~/pages/ico/120.png">
<link rel="apple-touch-icon" sizes="152x152" href="~/pages/ico/152.png">
<link rel="icon" type="image/x-icon" href="favicon.ico" />
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-touch-fullscreen" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="default">
<meta content="" name="description" />
<meta content="" name="author" />
<link href="https://fonts.googleapis.com/css?family=Rubik:400,500,500i,700&display=swap&subset=latin-ext"
      rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css">


<link href="~/plugins/jquery-scrollbar/jquery.scrollbar.css" rel="stylesheet" type="text/css" media="screen" />

<link href="~/pages/css/pages-icons.css" rel="stylesheet" type="text/css">
<link href="~/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link class="main-stylesheet" href="~/pages/css/pages.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/pages/css/custom/tm.css" />




<div style="text-align:center !important ;">

    <div class="d-flex justify-content-lg-center mr-auto p-5">
        <div class="">
            
                <form id="account" method="post">
                    <h3>Hesabınızla giriş yapın</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">E-Posta</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label >Şifre</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>


                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Giriş yap</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Şifrenizi mi unuttunuz</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Üye ol</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta doğrulaması talep et</a>
                        </p>
                    </div>
                </form>
           
        </div>

    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
